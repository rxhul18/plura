{
  "name": "@plura/db",
  "version": "0.0.0",
  "private": false,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "db:studio": "prisma studio",
    "db:validate": "prisma validate",
    "db:generate": "pnpm db:validate && prisma generate --no-engine",
    "db:push": "prisma db push --skip-generate",
    "db:migrate": "pnpm db:validate && prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "@prisma/extension-accelerate": "^1.2.1"
  },
  "devDependencies": {
    "prisma": "^6.0.1"
  }
}